		//- 	th-media
		//- )
		//- ng-src="{{element}}"

div.control

	div.progress.progress-striped.active
		div.progress-bar.progress-bar-success(
			role="progressbar"
			th-slideshow-progress
		)

	div.btn-group
		button.btn.btn-default(
			type="button"
			ng-class="{'active': control.galleriesShow }"
			ng-click="control.galleriesShow = !control.galleriesShow"
		)
			span.glyphicon.glyphicon-book

		button.btn.btn-default(
			type="button"
			ng-click="prevImage()"
		)
			span.glyphicon.glyphicon-step-backward

		button.btn.btn-default(
			type="button"
			ng-click="slideshow = !slideshow"
		) 
			span.glyphicon(
				ng-class="{'glyphicon-play' : !slideshow, 'glyphicon-pause' : slideshow}"
			)

		button.btn.btn-default(
			type="button"
			ng-click="nextImage()"
		) 
			span.glyphicon.glyphicon-step-forward

		button.btn.btn-default(
			type="button"
			ng-class="{'active': control.thumbsShow }"
			ng-click="control.thumbsShow = !control.thumbsShow"
		)
			span.glyphicon.glyphicon-picture